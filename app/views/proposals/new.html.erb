 <%= form_for [@project, @proposal] do |f| %>
          <div style="margin: 8px 0">
            <h2>依頼主への提案内容</h2>
            <%= f.text_area :content, placeholder: '依頼者への提案内容', style: 'width: 100%;height: 300px;' %>
          </div>
          <div style="margin: 8px 0">
            <%= f.label :見積金額, style: { 'margin-right' => 8 } %>
            <%= f.number_field :estimate, placeholder: '見積金額', html: { class: "search__query", style: 'text-align: right;' } %>
          </div>
          <div class="row">
            <div class="col10 push1">
              <%= button_tag type: "submit", class: "btn btn--block" do %>
              提案する<i class="icon-arrow-right"></i>
              <% end %>
            </div>
          </div>
          <% end %>
          <a class="top" href="/projects">案件一覧に戻る</a>